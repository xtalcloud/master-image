{
  "builders": [
    {
      "boot_command": "<up><wait><tab> inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg PACKER_USER=root PACKER_AUTHORIZED_KEY={{ .SSHPublicKey | urlquery }}<enter><wait>",
      "boot_wait": "5s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "RedHat_64",
      "guest_additions_mode": "disable",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{template_dir}}/../isos/{{user `iso_name`}}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{user `template`}}-virtualbox",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_timeout": "10000s",
      "type": "virtualbox-iso",
      "vm_name": "{{ user `template` }}",
      "export_opts": [
        "--manifest"
      ],
      "format": "ova"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/root",
        "IMAGE_NAME='{{user `name`}}'",
        "BUILD_ID='{{user `git_revision`}}'",
        "DOCUMENTATION_URL='{{user `repo_url`}}'"
      ],
      "execute_command": "sh -euxc '{{.Vars}} {{.Path}}'",
      "remote_folder": "/root",
      "expect_disconnect": true,
      "scripts": [
        "{{template_dir}}/scripts/motd.sh",
        "{{template_dir}}/scripts/issue.sh",
        "{{template_dir}}/scripts/metadata.sh",
        "{{template_dir}}/scripts/sshd.sh",
        "{{template_dir}}/scripts/networking.sh",
        "{{template_dir}}/scripts/vim.sh",
        "{{template_dir}}/scripts/fzf.sh",
        "{{template_dir}}/scripts/nnn.sh",
        "{{template_dir}}/scripts/zsh.sh",
        "{{template_dir}}/scripts/tmux.sh",
        "{{template_dir}}/scripts/cli-utils.sh",
        "{{template_dir}}/scripts/cleanup.sh",
        "{{template_dir}}/scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_basename": "xtal-master",
    "build_directory": "{{template_dir}}/../builds",
    "cpus": "4",
    "disk_size": "10240",
    "distro": "",
    "git_revision": "e49017f03dd0468a0ce180613c1f5043d645b629",
    "guest_additions_url": "",
    "headless": "",
    "http_directory": "{{template_dir}}/http",
    "iso_checksum": "",
    "iso_name": "",
    "memory": "4092",
    "mirror": "",
    "mirror_directory": "",
    "name": "Xtal EL {{user `version`}}",
    "repo_url": "https://github.com/xtalcloud/master-image",
    "template": "xtal-el-x86_64-{{ user `version` }}",
    "version": "0.2.16"
  }
}
